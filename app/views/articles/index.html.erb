<div class="bg pb-5 padding-top-navbar">
  <div class="container">

    <div class="d-md-flex justify-content-between mb-3 col-12 col-md-10 offset-md-1">
      <div class="d-none d-md-block">
        <span class="feature-name">News</span>
      </div>
      <%= render "search-bar" %>
    </div>

    <div class="col-12 col-md-10 offset-md-1 mt-4">

      <%= render "categories-desktop" %>
    </div>
  </div>

  <%= render "categories-mobile" %>

  <div class="container">
    <div class="col-12 col-md-8 offset-md-2">

      <div class="dropdown-divider dropdown-divider-short my-4 mx-auto"></div>

      <%= render "media-types-desktop" %>

      <%= render "media-types-mobile" %>
    </div>

    <div class="col-12 col-md-8 offset-md-2 mt-4 px-0">
      <% @articles.each do |article| %>
        <%= render "article", article: article %>
      <% end %>
    </div>
    <div class="d-flex justify-content-center mt-5">
      <%= will_paginate @articles %>
    </div>

  </div>
</div>
