 <div class="mb-4">
  <%= link_to '+ créer une catégorie', new_dashboards_forum_category_path %>
  <% @forum_categories.each do |fc| %>
    <div class="d-flex align-items-center mt-2">
      <h3 class='mb-0'><%= fc.name %></h3>
      <% if policy(fc).edit? %>
        <%= link_to edit_dashboards_forum_category_path(fc), class:"ml-3" do %>
          <i class="far fa-edit"></i>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<div>
  <%= link_to '+ créer un sujet', new_dashboards_subject_path %>
  <% @subjects.each do |subject| %>
    <div class="mt-2">
      <div class="d-flex align-items-center">
        <%= link_to subject_path(subject) do  %>
          <h3 class="my-0"><%= subject.title %></h3>
        <% end %>
        <% if policy(subject).edit? %>
          <%= link_to edit_dashboards_subject_path(subject), class:"ml-3" do %>
            <i class="far fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <div class="text-mini">
        <%= subject.answers.count %> commentaires
      </div>
    </div>
  <% end %>
</div>

