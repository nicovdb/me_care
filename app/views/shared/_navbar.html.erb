<% if user_signed_in? %>
  <div class="d-none d-xl-block">
    <%= render "shared/navbar-desktop" %>
  </div>
  <div class="d-block d-xl-none">
    <% if action_name == "home" %>
      <%= render "shared/navbar-mobile-white" %>
    <% else %>
      <%= render "shared/navbar-mobile-pink" %>
    <% end %>
  </div>
<% else %>
  <div class="d-none d-lg-block">
    <% if (controller_name == "sessions" || controller_name == "registrations") && action_name == "new" %>
      <%= render "shared/navbar-connexion-desktop" %>
    <% else %>
      <%= render "shared/navbar-disconnected-desktop" %>
    <% end %>
  </div>
  <div class="d-block d-lg-none">
    <% if (controller_name == "sessions" || controller_name == "registrations") && action_name == "new" %>
      <%= render "shared/navbar-connexion-mobile" %>
    <% elsif action_name == "home" %>
      <%= render "shared/navbar-disconnected-mobile-white" %>
    <% else %>
      <%= render "shared/navbar-disconnected-mobile-pink" %>
    <% end %>
  </div>
<% end %>
