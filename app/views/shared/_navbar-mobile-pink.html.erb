<div class="navbar-bg">
  <div class="container">
    <div class="navbar navbar-light navbar-lewagon">
      <div class="nav-item dropdown">
        <%= cl_image_tag current_user.profile_picture, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
          <% end %>
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Déconnexion", main_app.destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
      <% if action_name == "home" %>
        <%= link_to main_app.root_path, class: "navbar-brand" do %>
          <%= image_tag "logo-pink.svg" %>
        <% end %>
      <% elsif controller_name == "pages" %>
        <h1><%= t("views.controller_name.pages.action_name.#{action_name}")%></h1>
      <% elsif controller_name == "contacts"%>
        <h1><%= t("views.controller_name.contacts.action_name.#{action_name}")%></h1>
      <% else %>
        <h1><%= t("views.controller_name.#{controller_name}")%></h1>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

    </div>
    <div class="collapse navbar-collapse pb-3" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Home", main_app.root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Mon agenda", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "À savoir", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "News", main_app.articles_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Que faire si...", main_app.algorythm_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Forum", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "easy Live", "#", class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
