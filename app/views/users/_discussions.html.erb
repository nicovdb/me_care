<div class="text-center">
  <h3 class="profil-category-title mb-3"><strong>Mes discussions</strong></h3>
  <% if @user.subjects.any? %>
    <% @user.follow_subjects.each do |follow_subject| %>
      <div class="d-flex mb-3 align-items-center">
        <%= link_to subject_follow_subject_path(follow_subject.subject, follow_subject), method: :delete, remote: true do  %>
          <%= image_tag 'bell-solid.svg', class:'icon-forum-notif'%>
        <% end %>
        <div class='text-left ml-3'>
          <p class="mb-0"><%= link_to follow_subject.subject.title, subject_path(follow_subject.subject), class: 'text-header text-semibold'%></p>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class='text-left text-header text-semibold'>Vous ne suivez aucune discussion pour le moment.</p>
  <% end %>
</div>
