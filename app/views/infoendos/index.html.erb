<% content_for :meta_title, "À savoir | easy endo" %>
<div class="bg pb-5 padding-top-navbar min-100-vh-with-footer">
  <div class="container">
    <div class="d-md-flex justify-content-between mb-3 col-12 col-md-10 offset-md-1">
      <div class="d-none d-md-block">
        <%= link_to infoendos_path do  %>
          <span class="feature-name">À SAVOIR</span>
        <% end %>
      </div>
      <%= render "search-bar" %>
    </div>
  </div>

  <div class="container">
    <div class="col-12 col-md-8 offset-md-2 mt-4 px-0">
      <% unless @videos.empty? %>
        <div class="d-flex justify-content-center justify-content-md-start align-items-center mt-5">
          <%= image_tag "video.svg", class:"media-type-icon-smaller" %>
          <h3 class="ml-3 mb-0"><b>Videos</b></h3>
        </div>
        <div class="dropdown-divider my-4"></div>
        <% @videos.each do |infoendo| %>
          <%= render "infoendo", infoendo: infoendo %>
          <div class="dropdown-divider my-4"></div>
        <% end %>
      <% end %>

      <% unless @articles.empty? %>
        <div class="d-flex justify-content-center justify-content-md-start align-items-center mt-5">
          <%= image_tag "fiche.svg", class:"media-type-icon" %>
          <h2 class="ml-3 mb-0"><b>Fiches</b></h2>
        </div>
        <div class="dropdown-divider my-4"></div>
        <% @articles.each do |infoendo| %>
          <%= render "infoendo", infoendo: infoendo %>
          <div class="dropdown-divider my-4"></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
