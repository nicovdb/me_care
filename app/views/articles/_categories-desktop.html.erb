<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 d-none d-md-block">
  <div class="row">
    <div class="d-flex justify-content-between w-100">
      <% Article.categories.keys.first(3).each do |category| %>
        <%= render "category", category: category %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="d-flex justify-content-between w-100">
      <% Article.categories.keys[3..5].each do |category| %>
        <%= render "category", category: category %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="d-flex justify-content-between w-100">
      <% Article.categories.keys.last(3).each do |category| %>
        <%= render "category", category: category %>
      <% end %>
    </div>
  </div>
</div>
