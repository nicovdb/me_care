<div class="d-flex justify-content-between align-items-center">
  <div class="d-flex align-items-center">
    <%= image_tag "agenda/pain.svg", class: 'symptom-icon'%>
    <h3 class='mb-0 ml-2'>Douleurs</h3>
  </div>
</div>
<div class="range-slider" data-controller="range-slider-pain">
  <div class="w-100 d-flex justify-content-end">
    <p class="text-mini mb-0 slider-scale">Insupportable</p>
  </div>
  <div class="w-100 d-flex justify-content-between align-items-end">
    <p class="text-mini mb-0 slider-scale">0</p>
    <strong><output class="slider-scale text-mini"
    data-target="range-slider-pain.value">0</output></strong>
    <p class="text-mini mb-0 slider-scale">10</p>
  </div>
  <input type="range"
   data-target="range-slider-pain.range"
   data-action="input->range-slider-pain#updateValue"
   value="<%= daily_symptom.pain_level ? daily_symptom.pain_level : 0 %>"
   min="0"
   max="10"
   step="1">
  <%= f.input :pain_level, as: :hidden, input_html: { data: { target: "range-slider-pain.hidden" } }, collection: 0..10, label: false %>
</div>
