<%- if controller_name != 'sessions' %>
  <div class="my-2">
    <%= link_to "JE ME CONNECTE", new_session_path(resource_name), class: 'text-mini' %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="my-2">
    <%= link_to "JE M'INSCRIS", new_registration_path(resource_name), class: 'text-mini' %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' && controller_name != 'sessions' %>
  <div class="my-2">
    <%= link_to "J'AI OUBLIÉ MON MOT DE PASSE", new_password_path(resource_name), class: 'text-mini'%>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="my-2">
    <%= link_to "JE N'AI PAS REÇU LE LIEN DE CONFIRMATION", new_confirmation_path(resource_name), class: 'text-mini' %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="my-2">
    <%= link_to t('.didn_t_receive_unlock_instructions'), new_unlock_path(resource_name), class: 'text-mini' %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="my-2">
      <%= link_to t('.sign_in_with_provider', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider) , class: 'text-mini'%>
    </div>
  <% end %>
<% end %>
