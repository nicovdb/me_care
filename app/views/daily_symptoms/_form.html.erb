<div class="bg pb-5 padding-top-navbar min-100-vh-with-footer">
  <div class="container">
    <div class="d-md-flex justify-content-between mb-3 col-12 col-md-10 offset-md-1">
      <div class="d-none d-md-block">
        <%= link_to new_daily_symptom_path(day: @day) do  %>
          <span class="feature-name">MESURES</span>
        <% end %>
      </div>
      <div class="d-flex align-items-center justify-content-center">
        <% if !@edit_prev_day %>
          <%= link_to "<", new_daily_symptom_path(day: @day.prev_day) %>
        <% elsif !@previous_daily_symptom.nil? %>
          <%= link_to "<", edit_daily_symptom_path(@previous_daily_symptom, day: @day.prev_day) %>
        <% end %>
        <h3 class="px-3"><%= l(@day, format:"%d %B %Y").capitalize %></h3>
        <% if !@edit_next_day %>
          <%= link_to ">", new_daily_symptom_path(day: @day.next_day) %>
        <% elsif !@next_daily_symptom.nil? %>
          <%= link_to ">", edit_daily_symptom_path(@next_daily_symptom, day: @day.next_day) %>
        <% end %>
      </div>
      <div>
      </div>
    </div>
    <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 mt-4">
      <%= simple_form_for @daily_symptom do |f| %>
        <%= f.hidden_field :day, value: @day %>
        <div class="row">
          <div class="col-12 col-lg-6">
            <%= f.input :pain_level, collection: 0..10 %>
            <%= f.input :blood_level, collection: 0..5 %>
            <%= f.input :digestive_trouble_level, collection: 0..5 %>
            <%= f.input :stress_level, collection: 0..5 %>
            <%= f.input :insomnia_level, collection: 0..5 %>
          </div>
          <div class="col-12 col-lg-6">
            <div class="d-flex justify-content-between align-items-center">
              <h3>Sport</h3>
              <%= f.input :sport, as: :check_boxes, collection: [['oui', true]], wrapper_html: {class:' d-flex flex-column-reverse'} %>
            </div>
            <div class="dropdown-divider my-3"></div>
              <div class="d-flex justify-content-between align-items-center">
                <h3>Consultations/Urgences</h3>
                <%= f.input :emergency, as: :check_boxes, collection: [['oui', true]] %>
              </div>
            <div class="dropdown-divider my-3"></div>
              <div class="d-flex justify-content-between align-items-center">
                <h3>Antalgiques</h3>
                <%= f.input :analgesic, as: :check_boxes, collection: [['oui', true]] %>
              </div>
            <div class="dropdown-divider my-3"></div>
            <%= f.input :notes %>
          </div>
          <div class="text-center w-100">
            <%= f.submit "Je valide", class: 'btn btn-primary btn-ee mb-4' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
