<div class="graphs-container" data-target="charts.graphs" data-value="<%= @graphs.to_json %>">
  <% @graphs.first(3).each do |graph| %>
    <div data-symptom-target="<%= graph[:id] %>" class="mb-2">
      <div class="d-flex align-items-center">
        <%= image_tag "agenda/#{graph[:img]}" %>
        <h3 class="mb-0"><%= graph[:name] %></h3>
      </div>
      <div class="chart-container">
        <canvas id="<%= graph[:id] %>"></canvas>
      </div>
    </div>
  <% end %>
  <% @graphs[3..4].each do |graph| %>
    <div class="d-none mb-2" data-symptom-target="<%= graph[:id] %>">
      <div class="d-flex align-items-center">
        <%= image_tag "agenda/#{graph[:img]}" %>
        <h3 class="mb-0"><%= graph[:name] %></h3>
      </div>
      <div class="chart-container">
        <canvas id="<%= graph[:id] %>"></canvas>
      </div>
    </div>
  <% end %>

  <% if params[:base_period].nil? || params[:base_period] == "month" || params[:base_period] == "week" %>
    <div class="mb-2 d-none" data-symptom-target="sportChart">
      <div class="d-flex align-items-center">
        <%= image_tag "agenda/sport.svg" %>
        <h3 class="mb-0">Sport</h3>
      </div>
      <div class="d-flex justify-content-around align-items-center sport-container">
        <% if params[:base_period] == "week" %>
          <% @sport_data.each do |day| %>
            <% if day %>
              <div class="sport-week">Sport</div>
            <% else %>
              <div class="sport-week"></div>
            <% end %>
          <% end %>
        <% elsif params[:base_period].nil? || params[:base_period] == "month" %>
          <% @sport_data.each do |number| %>
            <div><%= number %></div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
