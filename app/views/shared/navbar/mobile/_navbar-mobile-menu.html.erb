<div id="menu" class="close">
  <div class="w-100 min-h-100 bg-darker py-4">
    <div class="container px-4">
      <div class="text-center position-relative">
        <button id="menu-close" class="navbar-toggler position-absolute" style="right:0; top:0">
          <%= image_tag "close-button.svg" %>
        </button>
        <%= link_to profil_path do %>
          <%= cl_image_tag current_user.profile_picture_green, width: 120, height: 120, crop: :fill, quality: :auto, fetch_format: :auto, class: "avatar avatar-menu-mobile" %>
        <% end %>
        <h1 class="text-success pt-3"><%= current_user.full_name %></h1>
        <div class="dropdown-divider divider-pink my-3"></div>
      </div>
      <div class="row">
        <div class="col-6 col-md-4 mb-3 mb-md-4">
          <%= link_to daily_symptoms_path do %>
            <div class="home-service-category d-flex flex-column align-items-center justify-content-center text-center">
              <%= image_tag "services/agenda.svg", class:"home-service-logo" %>
              <p class="home-service my-1">Mon agenda</p>
            </div>
          <% end %>
        </div>
        <div class="col-6 col-md-4 mb-3 mb-md-4">
          <%= link_to infoendos_path do %>
            <div class="home-service-category d-flex flex-column align-items-center justify-content-center text-center">
              <%= image_tag "services/a-savoir.svg", class:"home-service-logo" %>
              <p class="home-service my-1">À savoir</p>
            </div>
          <% end %>
        </div>
        <div class="col-6 col-md-4 mb-3 mb-md-4">
          <%= link_to articles_path do %>
            <div class="home-service-category d-flex flex-column align-items-center justify-content-center text-center">
              <%= image_tag "services/news.svg", class:"home-service-logo" %>
              <p class="home-service my-1">News</p>
            </div>
          <% end %>
        </div>
        <div class="col-6 col-md-4 mb-3 mb-md-4">
          <%= link_to algorythm_path, data: { turbolinks: 'false' } do %>
            <div class="home-service-category d-flex flex-column align-items-center justify-content-center text-center">
              <%= image_tag "services/que-faire-si.svg", class:"home-service-logo" %>
              <p class="home-service my-1">Que faire si… </p>
            </div>
          <% end %>
        </div>
        <div class="col-6 col-md-4 mb-3 mb-md-4">
          <%#= link_to "#" do %>
            <div class="home-service-category d-flex flex-column align-items-center justify-content-center text-center">
              <%= image_tag "services/forum.svg", class:"home-service-logo" %>
              <p class="home-service my-1 d-flex align-items-center">
                <span>Forum</span>
              </p>
            </div>
          <%# end %>
        </div>
        <div class="col-6 col-md-4 mb-3 mb-md-4">
          <%= link_to webinars_path do %>
            <div class="home-service-category d-flex flex-column align-items-center justify-content-center text-center">
              <%= image_tag "services/easy-live.svg", class:"home-service-logo" %>
              <p class="home-service my-1">easy Live</p>
            </div>
          <% end %>
        </div>
        <div class="col-6 col-md-4 mb-3 mb-md-4">
          <%#= link_to "#" do %>
            <div class="home-service-category d-flex flex-column align-items-center justify-content-center text-center">
              <%= image_tag "services/abonnement.svg", class:"home-service-logo" %>
              <p class="home-service my-1">Abonnement</p>
            </div>
          <%# end %>
        </div>
        <div class="col-6 col-md-4 mb-3 mb-md-4">
          <%= link_to new_contact_path do %>
            <div class="home-service-category d-flex flex-column align-items-center justify-content-center text-center">
              <%= image_tag "services/contact.svg", class:"home-service-logo" %>
              <p class="home-service my-1">Contact</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
