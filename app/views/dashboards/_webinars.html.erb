<% @webinars.each do |webinar| %>
  <div class="d-flex-column mb-4">
    <%= link_to webinar_path(webinar) do %>
      <h3 class="mb-1"><%= webinar.title %></h3>
    <% end %>
    <div class="d-flex align-items-center">
      <% if webinar.published %>
        <%= link_to unpublish_webinar_path(webinar), method: :patch, remote: true, data: {confirm: "Êtes vous sûr.e du dépublier cet webinar?"}, class: 'd-flex align-items-center' do  %>
          <span class='published'>publié</span>
        <% end %>
      <% else %>
        <%= link_to publish_webinar_path(webinar), method: :patch, remote: true, data: {confirm: "Êtes vous sûr.e du publier cet webinar?"}, class: 'd-flex align-items-center' do  %>
          <span class='unpublished'>non publié</span>
        <% end %>
      <% end %>
      <span class='text-mini mb-0 ml-3'><%= l(webinar.start_at, format:"%d %b %Y") %> </span>
      <% if policy(Webinar).edit? %>
        <%= link_to edit_dashboards_webinar_path(webinar), class:"ml-4" do %>
          <i class="far fa-edit"></i>
        <% end %>
      <% end %>
      <% if policy(Webinar).destroy? %>
        <%= link_to webinar_path(webinar), method: :delete, remote: true, data:{confirm: "Êtes vous sûr.e ?"}, class:"ml-2" do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
