<div class="container padding-top-navbar pb-5">
  <div class="col-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3">
    <h2 class="mb-3"><%= t(".forgot_your_password") %></h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true, label: false, placeholder: "Email",
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions mt-4 mb-5">
        <%= f.button :submit, t(".send_me_reset_password_instructions"), class:"btn btn-primary btn-ee" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
