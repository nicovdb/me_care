<!DOCTYPE html>
<html>
  <head>
    <title>MeCare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- PWA -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable"  content="yes">
    <link rel="manifest" href="<%= asset_path'manifest.json' %>">
    <%= render 'shared/ios_pwa_links' %>

    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Quicksand:wght@500;600;700&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>

    <div class="main-container">
      <div class="navbar-bg">
        <% if user_signed_in? %>
          <div class="d-none d-lg-block">
            <%= render "shared/navbar-desktop" %>
          </div>
          <div class="d-block d-lg-none">
            <%= render "shared/navbar-mobile" %>
          </div>
        <% else %>
          <%= render "shared/navbar-disconnected" %>
        <% end %>
      </div>

      <%= render 'shared/flashes' %>

      <%= yield %>

      <%= render 'shared/footer' %>
    </div>
  </body>
</html>
