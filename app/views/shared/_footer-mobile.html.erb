<footer>
  <div class="text-center mt-4">
    <%= image_tag 'logo_green.svg', class: 'logo-footer' %>
  </div>

  <div class="row my-5">
    <div class="col-6 border-col-footer-mobile text-center">
      <div class="d-inline-block text-left">
        <div class="footer-subtitle pb-2">
          <%= link_to "Mon agenda", daily_symptoms_path %>
        </div>
        <div class="footer-subtitle py-2">
          <%= link_to "À savoir", infoendos_path  %>
        </div>
        <div class="footer-subtitle py-2">
          <%= link_to "News", articles_path  %>
        </div>
        <div class="footer-subtitle py-2">
          <%= link_to "Que faire si...", algorythm_path, data: { turbolinks: 'false' }  %>
        </div>
        <div class="footer-subtitle py-2">
          <%= link_to "Forum", forum_path  %>
        </div>
        <div class="footer-subtitle py-2">
          <%= link_to "easy Live", webinars_path  %>
        </div>
        <div class="footer-subtitle py-2">
          <%= link_to "Abonnement", products_path  %>
        </div>
        <div class="footer-subtitle pt-2">
          <%= link_to "Équipe", team_path  %>
        </div>
      </div>
    </div>
    <div class="col-6 text-center">
      <div class="d-inline-block text-left">
        <% if user_signed_in? %>
          <div class="footer-subtitle pb-2">
            <%= link_to "Profil", profil_path  %>
          </div>
        <% else %>
          <div class="footer-subtitle pb-2">
            <%= link_to "Profil", new_user_session_path %>
          </div>
        <% end %>
        <div class="footer-subtitle py-2">
          <%= link_to "Contact", new_contact_path  %>
        </div>
        <div class="footer-subtitle my-2">
          <%= link_to "Politique de protection des données personnelles", asset_path("politique-de-protection-des-donnees-personnelles.pdf")  %>
        </div>
        <div class="footer-subtitle my-2">
          <%= link_to "Conditions générales d'utilisation", asset_path("conditions-generales-utilisation.pdf") %>
        </div>
        <div class="footer-subtitle my-2">
          <%= link_to "Conditions générales des services", asset_path("conditions-generales-de-services.pdf")  %>
        </div>
        <div class="footer-subtitle my-2">
          <%= link_to "Mentions légales", legals_path  %>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mb-3">
    <div class="footer-subtitle">
      <div class="d-flex justify-content-center">
        <div class="mx-3">
          <%= link_to "https://www.facebook.com/easyendo", target: "_blank" do  %>
            <i class="fab fa-facebook-f mr-2"></i>
          <% end %>
        </div>
        <div class="mx-3">
          <%= link_to "https://www.instagram.com/easyendo.app/", target: "_blank" do  %>
            <i class="fab fa-instagram mr-2"></i>
          <% end %>
        </div>
        <div class="mx-3">
          <%= link_to "https://www.linkedin.com/company/m-e-care/", target: "_blank" do  %>
            <i class="fab fa-linkedin-in mr-2"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mb-3">
    <div class="footer-subtitle">
      <div class="d-flex justify-content-center">
        <div class="px-2">
          <div class="d-flex justify-content-center align-items-center">
            <div class="mx-3">
              <%= image_tag "esante.svg", class: 'footer-label' %>
            </div>
            <div class="mx-3">
              <%= image_tag "resendo.svg", class: 'footer-label' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center text-mini">
    © <%= Date.today.year %> M&E Care - easy endo
  </div>


</footer>
