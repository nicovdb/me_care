<% @infoendos.each do |infoendo| %>
  <div class="d-flex-column mb-4">
    <%= link_to infoendo_path(infoendo) do %>
      <h3 class="mb-1"><%= infoendo.title %></h3>
    <% end %>
    <div class="d-flex align-items-center">
      <% if infoendo.published %>
        <%= link_to unpublish_infoendo_path(infoendo), method: :patch, remote: true, data: {confirm: "Êtes vous sûr.e de vouloir dépublier cette fiche à savoir ?"}, class: 'd-flex align-items-center' do  %>
          <span class='published'>publié</span>
        <% end %>
      <% else %>
        <%= link_to publish_infoendo_path(infoendo), method: :patch, remote: true, data: {confirm: "Êtes vous sûr.e de vouloir publier cette fiche à savoir ?"}, class: 'd-flex align-items-center' do  %>
          <span class='unpublished'>non publié</span>
        <% end %>
      <% end %>
      <span class='text-mini mb-0 ml-3'><%= l(infoendo.publication_date, format:"%d %b %Y") %> </span>
      <% if policy(infoendo).edit? %>
        <%= link_to edit_dashboards_infoendo_path(infoendo), class:"ml-4" do %>
          <i class="far fa-edit"></i>
        <% end %>
      <% end %>
      <% if policy(infoendo).destroy? %>
        <%= link_to infoendo_path(infoendo), method: :delete, remote: true, data:{confirm: "Êtes vous sûr.e ?"}, class:"ml-2" do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
