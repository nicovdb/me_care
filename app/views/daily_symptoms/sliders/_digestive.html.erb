<div class="d-flex justify-content-between align-items-center">
  <div class="d-flex align-items-center">
    <%= image_tag "agenda/digestive_trouble.svg", class: 'symptom-icon'%>
    <h3 class='mb-0 ml-3'>Troubles digestifs</h3>
  </div>
</div>
<div class="range-slider" data-controller="range-slider-digestive">
  <div class="w-100 d-flex justify-content-center">
    <strong><output class="slider-scale text-mini"
    data-target="range-slider-digestive.value"></output></strong>
  </div>
  <div class="w-100 d-flex justify-content-between align-items-end">
    <p class="text-mini mb-0 slider-scale">0</p>
    <p class="text-mini mb-0 slider-scale">Invalidant</p>
  </div>
  <input type="range"
   data-target="range-slider-digestive.range"
   data-action="input->range-slider-digestive#updateValue"
   value="<%= daily_symptom.digestive_trouble_level ? daily_symptom.digestive_trouble_level : 0 %>"
   min="0"
   max="5"
   step="1">
  <%= f.input :digestive_trouble_level, as: :hidden, input_html: { data: { target: "range-slider-digestive.hidden" } }, collection: 0..5, label: false %>
</div>
