<div class="article-card">
  <div class="d-flex justify-content-between">
    <div class="d-flex align-items-center">
      <div class="mr-2 mr-md-4">
        <span class="category-bullet-big <%= infoendo.category %>"></span>
      </div>
      <div class="my-auto pr-2">
        <%= link_to infoendo_path(infoendo) do %>
          <div class="text-small text-info d-none d-md-block">
            <%= t("infoendo.#{infoendo.category}") %>
          </div>
          <h3 class="my-1"><%= infoendo.title %></h3>
          <div class="text-mini text-info d-none d-md-block"><%= l(infoendo.created_at, format:"%d %B %Y") %> - temps de lecture : <%= infoendo.reading_time %>
          </div>
          <div class="text-mini text-info d-block d-md-none"> dur√©e : <%= infoendo.reading_time %>
          </div>
        <% end %>
      </div>
    </div>
    <div class='my-auto'>
      <%= link_to infoendo_path(infoendo) do %>
        <% if infoendo.cover.attached? %>
          <%= cl_image_tag infoendo.cover.key %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
