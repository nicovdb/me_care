<div class="d-flex justify-content-between align-items-center">
  <div class="d-flex align-items-center">
    <%= image_tag "agenda/stress.svg", class: 'symptom-icon'%>
    <h3 class='mb-0 ml-3'>Stress</h3>
  </div>
</div>
<div class="range-slider" data-controller="range-slider-stress">
  <div class="w-100 d-flex justify-content-center">
    <strong><output class="slider-scale text-mini slider-output"
    data-target="range-slider-stress.value"></output></strong>
  </div>
  <div class="w-100 d-flex justify-content-between align-items-end">
    <p class="text-mini mb-0 slider-scale">0</p>
    <p class="text-mini mb-0 slider-scale">Choc Ã©motionnel</p>
  </div>
  <input type="range"
   data-target="range-slider-stress.range"
   data-action="input->range-slider-stress#updateValue"
   value="<%= daily_symptom.stress_level ? daily_symptom.stress_level : 0 %>"
   min="0"
   max="5"
   step="1">
  <%= f.input :stress_level, as: :hidden, input_html: { data: { target: "range-slider-stress.hidden" } }, collection: 0..5, label: false %>
</div>
