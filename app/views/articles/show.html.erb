<div class="bg mt-2 pb-5">
  <div class="container article-show min-100-vh-with-navbar-footer">
    <div class="col-12 col-md-10 offset-md-1 d-none d-md-block">
      <span class="feature-name">News</span>
    </div>

    <div class="col-12 col-md-8 offset-md-2 mt-4">
      <div class="text-md-center">
        <div class="d-flex align-items-center justify-content-md-center mb-2">
          <span class="category-bullet <%= @article.category %>"></span>
          <h2 class="ml-2 mb-0">  <%= t("article.#{@article.category}") %></h2>
        </div>
        <div class="d-flex flex-column-reverse flex-md-column">
          <div class="mb-3">
            <h1><%= @article.title %></h1>
            <p class="text-info text-small mb-0"><%= l(@article.created_at, format:"%d %B %Y") %> - <%= @article.author %></p>
            <p class="text-info text-small">Temps de lecture : <%= @article.reading_time %></p>
          </div>
          <div>
            <% if @article.cover.attached? %>
              <%= cl_image_tag @article.cover.key, class:"mb-2" %>
              <p class="text-info text-mini text-right text-md-center"><%= @article.cover_credit %></p>
            <% end %>
          </div>
        </div>

      </div>

      <%= @article.content %>
    </div>
  </div>
</div>
