<div class="navbar-bg">
  <div class="container">
    <div class="navbar navbar-light navbar-lewagon col-12 col-md-10 offset-md-1">
      <div class="nav-item dropdown">
        <% if controller_name == "users" || (controller_name == "registrations") && action_name == "edit" %>
          <%= image_tag "logo-pink-no-text.svg", class: "dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
        <% else %>
          <%= cl_image_tag current_user.profile_picture, width: 120, height: 120, crop: :fill, quality: :auto, fetch_format: :auto, class: "avatar avatar-small dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Dashboard", main_app.dashboard_path, class: "dropdown-item" %>
          <% end %>
          <%= link_to "Mon profil", main_app.profil_path, class: "dropdown-item" %>
          <%= link_to "DÃ©connexion", main_app.destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
      <% if action_name == "home" %>
        <%= link_to main_app.root_path, class: "navbar-brand" do %>
          <%= image_tag "logo-pink.svg" %>
        <% end %>
      <% elsif controller_name == "pages" %>
        <h1><%= t("views.controller_name.pages.action_name.#{action_name}")%></h1>
        <% elsif controller_name == "users" || controller_name == 'registrations' %>
        <h1>Profil</h1>
      <% elsif controller_name == "contacts"%>
        <h1><%= t("views.controller_name.contacts.action_name.#{action_name}")%></h1>
      <% elsif controller_name == "informations"%>
        <h1>Questionnaire</h1>
      <% elsif controller_name == "dashboards"%>
        <h1>Dashboard</h1>
      <% else %>
        <h1><%= t("views.controller_name.#{controller_name}")%></h1>
      <% end %>

      <button id="menu-burger" class="navbar-toggler">
        <span class="navbar-toggler-icon"></span>
      </button>

    </div>
  </div>
</div>

<%= render "shared/navbar/mobile/navbar-mobile-menu" %>
