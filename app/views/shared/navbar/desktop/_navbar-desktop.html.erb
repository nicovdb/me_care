<div class="navbar-bg">
  <div class="container">
    <div class="navbar navbar-expand-lg navbar-light navbar-lewagon col-12 col-md-10 offset-md-1">
      <%= link_to main_app.root_path, class: "navbar-brand" do %>
        <%= image_tag "logo-pink.svg" %>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Mon agenda", "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "À savoir", main_app.infoendos_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "News", main_app.articles_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Que faire si...", main_app.algorythm_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "#", class: "nav-link d-flex align-items-center" do %>
                Forum
                <% if current_user.unread_posts_count != 0 %>
                  <span class="pink-bullet ml-1"><%= current_user.unread_posts_count %></span>
                <% end %>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "easy Live", main_app.webinars_path, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="nav-item dropdown">
        <%= cl_image_tag current_user.profile_picture, width: 120, height: 120, crop: :fill, quality: :auto, fetch_format: :auto,  class: "avatar-medium dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Dashboard", main_app.dashboard_path, class: "dropdown-item" %>
          <% end %>
          <%= link_to "Mon profil", main_app.profil_path, class: "dropdown-item" %>
          <%= link_to "Déconnexion", main_app.destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    </div>
  </div>
</div>
