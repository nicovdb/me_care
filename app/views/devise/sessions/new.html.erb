<% content_for :meta_title, "Connexion | easy endo" %>
<div class="bg  padding-top-navbar">
  <div class="container pb-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-md-3">
        <h1 class="text-center my-4">easy endo vous aide à mieux vivre votre endométriose</h1>
      </div>
      <div class="col-12 col-md-6 offset-md-3 col-xl-4 offset-xl-4">

        <div class="px-5 mt-4">
          <h2>Connexion</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          label: false,
                          placeholder: "Email",
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          label: false,
                          placeholder: "Mot de passe",
                          required: false,
                          input_html: { autocomplete: "current-password" }, wrapper_html: { class: 'mb-1' } %>
              <div class="text-right mb-3">
                <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: 'text-mini'%>
              </div>

              <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions text-center mt-3 pt-2">
              <div>
                <%= f.button :submit, "JE ME CONNECTE", class: 'btn btn-primary btn-ee-large text-mini' %>
              </div>
              <div>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <%= render 'shared/partners' %>
    </div>
  </div>
</div>
