<div class="col-12 col-md-8 offset-md-2 mt-4 px-0">
  <div class="dropdown-divider dropdown-divider-short my-4 mx-auto"></div>

  <div class="d-flex align-items-center mt-5">
    <%= image_tag "article.svg", class: 'media-type-icon' %>
    <h3 class="ml-2 mb-0 category-link">Articles</h3>
  </div>
  <div class="dropdown-divider mt-2 mb-4"></div>
  <% articles.where(media_type: "article").each do |article| %>
    <%= render "article", article: article %>
  <% end %>

  <div class="d-flex align-items-center mt-5">
    <%= image_tag "event.svg", class: 'media-type-icon' %>
    <h3 class="ml-2 mb-0 category-link">Événements</h3>
  </div>
  <div class="dropdown-divider mt-2 mb-4"></div>
  <% articles.where(media_type: "event").each do |article| %>
    <%= render "article", article: article %>
  <% end %>

  <div class="d-flex align-items-center mt-5">
    <%= image_tag "media.svg", class: 'media-type-icon' %>
    <h3 class="ml-2 mb-0 category-link">Médias</h3>
  </div>
  <div class="dropdown-divider mt-2 mb-4"></div>
  <% articles.where(media_type: "media").each do |article| %>
    <%= render "article", article: article %>
  <% end %>
</div>
