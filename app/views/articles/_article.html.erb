<%= link_to article_path(article) do %>
  <div class="article-card">
    <div class="dropdown-divider my-4"></div>
    <div class="mb-md-5">
      <div class="d-flex justify-content-between">
        <div class="d-flex">
          <div class="mr-2 mr-md-4 my-auto">
            <span class="category-bullet-big <%= article.category %>"></span>
          </div>
          <div class="my-auto">
            <div class="text-small text-info d-none d-md-block">
              <%= t("article.#{article.category}") %>
            </div>
            <h2 class="my-1"><%= article.title %></h2>
            <div class="text-mini text-info d-none d-md-block"><%= l(article.created_at, format:"%d %B %Y") %> - <%= article.reading_time %>
            </div>
            <div class="text-mini text-info d-block d-md-none"> Temps de lecture : <%= article.reading_time %>
            </div>
            <div class="d-flex">
              <% if policy(Article).edit? %>
                <%= link_to "Modifier", edit_article_path(article), class: 'text-mini' %>
              <% end %>
              <% if policy(Article).destroy? %>
                <%= link_to "Supprimer", article_path(article), method: :delete, data: {confirm: "Souhaitez-vous supprimer définitvement cet article ? Cette action est irréversible."}, class: "ml-2 text-mini" %>
              <% end %>
            </div>
          </div>
        </div>
        <div class='my-auto'>
          <% if article.cover.attached? %>
            <%= cl_image_tag article.cover.key %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
