<div class="d-block d-md-none">
  <div class="wrapper-bullets-mobile d-flex text-center">
    <% Article.categories.keys.each do |category| %>
      <%= link_to articles_path(category: category) do %>
        <div class="d-flex align-items-center mb-2 mx-2">
          <span class="category-bullet <%= category %>"></span>
          <% if params[:category].present? && params[:category] == category %>
            <h2 class="ml-2 mb-0 text-underline"><%= t("article.#{category}") %></h2>
          <% else %>
            <h2 class="category-link ml-2 mb-0">  <%= t("article.#{category}") %></h2>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
